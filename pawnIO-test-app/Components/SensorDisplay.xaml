<UserControl x:Class="pawnIO_test_app.Components.SensorDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pawnIO_test_app.Components"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="500">
    <Border BorderThickness="0,1,0,0" BorderBrush="LightGray">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" MouseEnter="Mouse_Enter" MouseLeave="Mouse_Leave">
            <TextBlock Text="device name" x:Name="NameTB" Margin="0,0,70,0" Width="200"/>
            <TextBlock Text="0%" x:Name="ValueTB" Width="100" Margin="0,0,20,0" TextAlignment="Center"/>
            <TextBlock Text="100%" x:Name="MaxValueTB" Width="100" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
