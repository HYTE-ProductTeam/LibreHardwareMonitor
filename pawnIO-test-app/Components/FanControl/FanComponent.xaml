<UserControl x:Class="pawnIO_test_app.Components.FanControl.FanComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pawnIO_test_app.Components.FanControl"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">
    <Border BorderBrush="Black" BorderThickness="1" Margin="10" Width="250"> 
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Device1" x:Name="NameTB"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Current Speed:"/>
                <TextBlock Text="1000 RPMs" x:Name="RPMTB" Margin="20,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Target Speed:"/>
                <TextBox Text="100" Width="50" x:Name="PercentageTB" Margin="20,0,0,0" TextAlignment="Center" TextChanged="TargetSpeedChanged"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
